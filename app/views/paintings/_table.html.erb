<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Thumbnail</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Status</th>
      <th scope="col" colspan=3/>
    </tr>
  </thead>

  <tbody>
    <% @paintings.each do |painting| %>
      <tr>
        <th scope="row"><%= painting.id %></th>
        <td><%= image_tag painting.image.url(:thumb) %></td>
        <td><%= painting.name %></td>
        <td><%= painting.description %></td>
        <td>Â£<%= painting.price %></td>

        <td><%= 'sold' if painting.sold %></td>

        <td><%= link_to 'mark as sold', sell_path(painting) %></td>
        <td><%= link_to 'edit', edit_painting_path(painting), data: { turbolinks: false } %></td>
        <td><%= link_to 'delete', painting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>