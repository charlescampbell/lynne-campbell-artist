<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th colspan=2></th>
    </tr>
  </thead>

  <tbody>
    <% @descriptions.each do |description| %>
      <tr>
        <td><%= description.description %></td>
        <td><%= link_to 'edit', edit_description_path(description), data: { turbolinks: false } %></td>
        <td><%= link_to 'destory', description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
