<%= form_with(model: description, local: true, url: { action: 'add_description'}) do |form| %>
  <div class="form-group">
    <label for="disabledTextInput">Description</label>
    <%= form.text_field :description, class: 'form-control', placeholder: 'e.g. watercolor', required: true %>
  </div>

  <%= form.submit 'Add', class: 'btn btn-primary', type: 'submit' %>
<% end %>